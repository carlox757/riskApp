<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="120dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/currentPlayer"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:text="Current player is: "/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Current Gold is:"
            android:layout_marginRight="12dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:id="@+id/currentGoldOfUser"
            android:ems="10" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/seekquestion"
        android:text="@string/seekBar"/>

    <SeekBar
        android:layout_width="350dp"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/seekValue"
        android:text="0"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:id="@+id/minvalue"
            android:text="@string/minVal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxvalue"
            android:text="@string/maxVal"/>

    </LinearLayout>

    <Button
        android:id="@+id/bDecision1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DecisionButton" />
</LinearLayout>