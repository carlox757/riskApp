<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:gravity="center"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.lkerr.risk_app.cardGameScreen3">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/currentPlayer"
            android:textSize="15sp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:text="@string/CurrentPlayerString"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/CurrentGoldString"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="match_parent"
            android:id="@+id/currentGoldOfUser"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cir1"
            android:layout_marginRight="18dp"
            android:src="@drawable/cir1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/cir1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/Circle1"/>

        <ImageView
            android:id="@+id/cir2"
            android:layout_marginRight="18dp"
            android:src="@drawable/cir2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/Circle2" />

        <ImageView
            android:id="@+id/cir3"
            android:layout_marginRight="18dp"
            android:src="@drawable/cir3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/Circle3" />

        <ImageView
            android:id="@+id/cir4"
            android:layout_marginRight="18dp"
            android:src="@drawable/cir4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/Circle4" />

        <ImageView
            android:id="@+id/cir5"
            android:src="@drawable/cir5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/cir1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/Circle5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/card1"
            android:layout_marginRight="10dp"
            android:layout_width="57dp"
            android:src="@drawable/cardback"
            android:layout_height="100dp"
            android:contentDescription="@string/backOfPlayingCard" />

        <ImageView
            android:id="@+id/card2"
            android:layout_marginRight="10dp"
            android:layout_width="57dp"
            android:src="@drawable/cardback"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/backOfPlayingCard" />

        <ImageView
            android:id="@+id/card3"
            android:layout_marginRight="10dp"
            android:layout_width="57dp"
            android:src="@drawable/cardback"
            android:layout_height="100dp"
            android:contentDescription="@string/backOfPlayingCard" />

        <ImageView
            android:id="@+id/card4"
            android:layout_marginRight="10dp"
            android:layout_width="57dp"
            android:src="@drawable/cardback"
            android:layout_height="100dp"
            android:contentDescription="@string/backOfPlayingCard" />

        <ImageView
            android:id="@+id/card5"
            android:layout_width="57dp"
            android:src="@drawable/cardback"
            android:layout_height="100dp"
            android:contentDescription="@string/backOfPlayingCard" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/select"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/option1"
                android:onClick="selectOptionDecoy"
                android:text="@string/cardGameScreen3Option1"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:id="@+id/decoyOptionDecoy"
                android:onClick="selectOptionDecoy"
                android:text="@string/cardGameScreen3Option2"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/option2"
                android:onClick="selectOptionDecoy"
                android:text="@string/cardGameScreen3Option3"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/play1"
            android:text="@string/cardGamePlayButton"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/nextGame1"
            android:text="@string/cardGameNextButton"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
