<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user__area_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lkerr.risk_app.User_Area_Activity">

    <Button
        android:text="@string/game1String"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/bGame1" />

    <Button
        android:text="@string/game2String"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bGame1"
        android:layout_alignRight="@+id/bGame1"
        android:layout_alignEnd="@+id/bGame1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/bGame2" />

    <Button
        android:text="@string/game3String"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bGame2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/bGame3" />
    <Button
        android:text="@string/game4String"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bGame3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/bGame4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stringLogout"
        android:id="@+id/bLogout"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bGame3"
        android:layout_alignStart="@+id/bGame3" />

</RelativeLayout>
