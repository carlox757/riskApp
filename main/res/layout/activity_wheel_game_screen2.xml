<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/currentWheelPlayer"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:text="Current player is: "/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Current Gold is:"
            android:layout_marginRight="12dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:id="@+id/currentGoldOfUserWheel"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/wheelOutcome"
                android:layout_height="37dp" />

            <ImageView

                android:src="@drawable/arrow"
                android:id="@+id/arrow"
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:layout_height="30dp" />

        </LinearLayout>


        <ImageView
            android:src="@drawable/wheel"
            android:id="@+id/imageView_ring"
            android:scaleType="matrix"
            android:layout_height="250dp"
            android:layout_width="200dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/select"/>


        <RadioGroup
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/option1"
                android:onClick="selectOption"
                android:text="@string/WheelGameScreen2Option1"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/option2"
                android:onClick="selectOption"
                android:text="@string/WheelGameScreen2Option2"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/option3"
                android:onClick="selectOption"
                android:text="@string/WheelGameScreen2Option3"/>

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/play1"
            android:text="Play"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/nextwheel"
            android:text="next"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
