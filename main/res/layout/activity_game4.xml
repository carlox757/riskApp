<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lkerr.risk_app.DiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/currentPlayer"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:text="Current player is: "/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Current Gold is:"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:id="@+id/currentGoldOfUser"
            android:ems="10" />

    </LinearLayout>

    <Button
        android:id="@+id/b_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="287dp" />

    <ImageView
        android:id="@+id/iv_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/die1"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="49dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="380dp" >

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choice 1"
            tools:layout_editor_absoluteX="-45dp"
            tools:layout_editor_absoluteY="3dp" />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choice 2"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="414dp" />

        <RadioButton
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choice 3" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/play1"
            android:text="Play"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/nextGame1"
            android:text="home"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
